<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- Root element should wrap to parent size. -->

    <!-- Your view xml codes. -->

    <!--Bottom bar layout should be in root element. Parent should be Relative layout so that we can always align to parent bottom-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="4">"

        <ImageButton
            android:id="@+id/btn_1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/home_icon"
            android:clickable="true"
            android:onClick="onHomeEmployeClick" />

        <ImageButton
            android:id="@+id/btn_3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/btn_1"
            android:background="@drawable/message_icon"
            android:clickable="true"
            android:onClick="onMessageEmplClick" />

        <ImageButton
            android:id="@+id/btn_4"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/btn_3"
            android:background="@drawable/settings_icon"
            android:clickable="true"
            android:onClick="onSettingsClick" />

        <ImageButton
            android:id="@+id/btn_5"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/profil_icon"
            android:clickable="true"
            android:onClick="onProfilClick" />


    </RelativeLayout>

</RelativeLayout>