<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    app:cardElevation="20dp"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="8dp"
    android:layout_marginTop="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_margin="6dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="103dp"
            android:layout_margin="5dp"
            android:elevation="10dp"
            app:cardCornerRadius="300dp">

            <ImageView
                android:id="@+id/img_headline"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/user"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="155dp"
            android:layout_margin="8dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Nom"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/text_ville"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Ville"
                android:textColor="@color/gray"
                android:textSize="12sp"
                ></TextView>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:maxLines="6"
                android:text="Je suis un employee de qualiite qui va accomplir tous les travails avec success"
                android:textColor="@color/black"
                android:textSize="10sp"
                ></TextView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVoir"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/button_back"
                android:text="voir tout"
                android:textColor="@color/black"
                android:textSize="7dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/btnHeart"
            android:layout_width="40dp"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/heart_favorite"
            android:textAllCaps="false"
            android:textSize="7dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>